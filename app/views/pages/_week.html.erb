<table style="border: 4px solid #EEE;">
  <thead style="background-color:#790C0A;color:white;">
    <th style="width: 134px">Monday</th>
    <th style="width: 134px">Tuesday</th>
    <th style="width: 134px">Wednesday</th>
    <th style="width: 134px">Thursday</th>
    <th style="width: 134px">Friday</th>
    <th style="width: 134px">Saturday</th>
    <th style="width: 134px">Sunday</th>
  </thead>
  <tbody>
    <tr>
      <% @workouts.each do |workout| %> 
      <td class="workout">
        <p><span style="color: #333;font-size: 12px;font-weight:bold"><%=workout.summary %></span></p>
        <p><span id="label">Miles: </span><%=workout.miles %></p>
        <p><%=workout.description%></p>
      </td>
      <% end %>
    </tr>
  </tbody>
</table>