<% provide(:title, 'New Goal') %>
<h1>New Goal</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@goal) do |f| %>

      <%= f.label :name, id:"label" %>
      <%= f.text_field :name %>

      <%= f.label :distance, id:"label" %>
      <%= f.text_field :distance %>

      <%= f.label :date, id:"label"%>
      <%= f.text_field :date, onmouseover:"$(this).datepicker({'format': 'yyyy-mm-dd', 'weekStart': 1, 'autoclose': true});" %>

      <%= f.label :goal, id:"label" %>
      <%= f.text_field :goal %>

      <%= f.submit "Create Goal", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>