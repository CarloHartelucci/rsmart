<div class="row">
  <div class="span6 offset3">
    <%= form_for(@workout) do |f| %>
      <% if @workout.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@workout.errors.count, "error") %> prohibited this workout from being saved:</h2>

          <ul>
          <% @workout.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>  

      <%= f.label :athlete, id:"label"%>
      <%= f.collection_select(:athlete_id,@athletes,:id,:name) %>

      <%= f.label :summary, id:"label" %><br/>
      <%= f.text_field :summary%>

      <%= f.label :miles, id:"label" %><br/>
      <%= f.text_field :miles%>

        <%= f.label :description, id:"label" %><br/>
        <%= f.text_area :description, rows:"5"%>

        <%= f.label :date, id:"label" %><br/>
        <%= f.text_field :date, onmouseover:"$(this).datepicker({'format': 'yyyy-mm-dd', 'weekStart': 1, 'autoclose': true});" %>

        <%= f.submit class: "btn btn-large btn-primary" %>

    <% end %>
  </div>
</div>

